---
// data imports
import * as site from "../data/site.json";

interface Props {
  author?: string;
  authorName?: string;
  title?: string;
}

const { author, authorName } = Astro.props;
---

<div class="card__wrapper">
  <div class="card alt featured" id="about">
    <header class="card__header">
      <img
        src="/assets/images/title-bar-close.png"
        height="28"
        width="28"
        class="control close"
        alt="Close"
      />
      <div class="title">
        <h3 class="card__title">Articles by {authorName}</h3>
        <span class="icon">&nbsp;</span>
      </div>
      <img
        src="/assets/images/title-bar-expand.png"
        height="28"
        width="28"
        class="control expand"
      />
      <img
        src="/assets/images/title-bar-collapse.png"
        height="28"
        width="28"
        class="control collapse"
      />
      <a href="/" class="button">&nbsp;</a>
    </header>

    <section class="card__content">
      <section class="hero-image">
        <img
          src={"/assets/images/authors/" + author + ".jpg"}
          alt="Mack"
          id="mack"
        />
        <svg xmlns="http://www.w3.org/2000/svg">
          <filter id="noiseFilter">
            <feTurbulence
              type="fractalNoise"
              baseFrequency="0.5"
              numOctaves="3"
              stitchTiles="stitch"></feTurbulence>
          </filter>
          <rect width="100%" height="100%" filter="url(#noiseFilter)"></rect>
        </svg>
      </section>
      <a href="#popup1" class="button primary">About Mack</a>
    </section>
  </div>
</div><!-- end: .card-wrapper -->

<style>
  .control {
    opacity: 0;
  }
  .control.close {
    opacity: 1;
  }
  .card {
    position: sticky;
    top: 3rem;
  }
  .card__header a.button {
    all: unset;
    position: absolute;
    top: 0;
    left: 0;
    height: 36px;
    width: 36px;
  }
  .card__content {
    all: unset;
    display: block !important;
    padding: 0;
  }
  .card__content .hero-image {
    margin: 0 !important;
    height: 100%;
    position: relative;
    width: 100%;
    z-index: 1;
  }
  .card__content .hero-image img#mack {
    border: none;
    box-shadow: none;
    display: block;
    margin: 0;
    object-fit: cover;
    width: 100% !important;
  }
  .card__content .button {
    display: none;
  }
</style>
